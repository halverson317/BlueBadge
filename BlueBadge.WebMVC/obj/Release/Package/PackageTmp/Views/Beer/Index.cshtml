@model IEnumerable<BlueBadge.Models.BeerGetItem>

@{
    ViewBag.Title = "Index";
}

<h2>Beer Catalog</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BeerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Style)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.CurrentRating)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BeerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Style)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentRating)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BeerName}) 
           
        </td>
    </tr>
}

</table>
